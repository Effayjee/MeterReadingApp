<Window x:Class="MeterReadingApp.Views.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Ошибка" Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Произошла ошибка:" FontWeight="Bold" FontSize="14"/>

        <TextBox Grid.Row="1" x:Name="MessageBox"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,10,0,10"/>

        <Button Grid.Row="2" Content="OK" Width="80" Height="30"
                HorizontalAlignment="Right" Click="Ok_Click"/>
    </Grid>
</Window>
