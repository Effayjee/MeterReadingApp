<Window x:Class="MeterReadingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:MeterReadingApp.ViewModels"
        Title="Показание счетчиков" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ComboBox Width="120" Margin="10"
                  SelectedItem="{Binding SelectedResourceType, Mode=TwoWay}">
            <ComboBox.Items>
                <sys:String>Вода</sys:String>
                <sys:String>Электричество</sys:String>
            </ComboBox.Items>
        </ComboBox>
        
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <Button Content="Добавить" Command="{Binding AddCommand}" Margin="0 0 10 0"/>
            <Button Content="Удалить" Command="{Binding DeleteCommand}" Margin="0 0 10 0"/>
            <Button Content="Сохранить" Command="{Binding SaveCommand}"/>
            <Button Content="Info" Click="InfAdd" Margin="0 0 10 0"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Readings}"
                  AutoGenerateColumns="False"
                  SelectedItem="{Binding SelectedReading, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Тип" Binding="{Binding ResourceType}" />
                <DataGridTextColumn Header="Дата" Binding="{Binding Date}" />
                <DataGridTextColumn Header="Значение" Binding="{Binding Value}" />

                <DataGridTextColumn Header="Соленость">
                    <DataGridTextColumn.Binding>
                        <Binding Path="Salinity"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
